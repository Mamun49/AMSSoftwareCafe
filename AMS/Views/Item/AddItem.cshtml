@model AMS.Models.STK_Item

@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<div id="content" class="main-content">
    <!--  Navbar Starts / Breadcrumb Area  -->
    <div class="sub-header-container">
        <header class="header navbar navbar-expand-sm">
            <a href="javascript:void(0);" class="sidebarCollapse" data-placement="bottom">
                <i class="las la-bars"></i>
            </a>
            <ul class="navbar-nav flex-row">
                <li>
                    <div class="page-header">
                        <nav class="breadcrumb-one" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="javascript:void(0);">Product</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><span>Product Entry</span></li>
                            </ol>
                        </nav>
                    </div>
                </li>
            </ul>

            <ul class="navbar-nav d-flex align-center ml-auto right-side-filter">
                <li class="nav-item more-dropdown">
                    <div class="input-group input-group-sm">
                        <input id="rangeCalendarFlatpickr" class="form-control flatpickr flatpickr-input active" type="text" placeholder="Select">
                        <div class="input-group-append">
                            <span class="input-group-text bg-primary border-primary" id="basic-addon2">
                                <i class="lar la-calendar"></i>
                            </span>
                        </div>
                    </div>
                </li>
                <li class="nav-item more-dropdown">
                    <a href="javascript: void(0);" data-original-title="Reload Data" data-placement="bottom" class="btn btn-primary dash-btn btn-sm ml-2 bs-tooltip">
                        <i class="las la-sync"></i>
                    </a>
                </li>
                <li class="nav-item custom-dropdown-icon">
                    <a href="javascript: void(0);" data-original-title="Filter" data-placement="bottom" id="customDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-primary dash-btn btn-sm ml-2 bs-tooltip">
                        <i class="las la-filter"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="customDropdown">
                        <a class="dropdown-item" data-value="Filter 1" href="javascript:void(0);">Filter 1</a>
                        <a class="dropdown-item" data-value="Filter 2" href="javascript:void(0);">Filter 2</a>
                        <a class="dropdown-item" data-value="Filter 3" href="javascript:void(0);">Filter 3</a>
                    </div>
                </li>
            </ul>
        </header>
    </div>
    <div class="layout-px-spacing">
        <div class="layout-top-spacing mb-2">
            <div class="col-md-12">
                <div class="row">
                    <div class="container p-0">
                        <div class="row layout-top-spacing">
                            <div class="col-lg-12 layout-spacing">
                                <div class="statbox widget box box-shadow mb-4">
                                    <div class="widget-header">
                                        <div class="row">
                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                <h4>Item Entry</h4>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="widget-content widget-content-area">
                                        <div class="form-group row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                @using (Html.BeginForm())
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <form class="needs-validation" novalidate action="javascript:void(0);">
                                                        <div class="form-row">
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom01">Item Name</label>
                                                                @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })

                                                            </div>
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom02">Item Code</label>
                                                                @Html.EditorFor(model => model.ItemCode, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.ItemCode, "", new { @class = "text-danger" })

                                                            </div>

                                                        </div>
                                                        <div class="form-row">
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom01">Category</label>
                                                                @Html.DropDownListFor(model => model.CID, new SelectList(ViewBag.CatList, "Value", "Text"), "Select Category", new { @class = "form-control" })
                                                                @Html.ValidationMessageFor(model => model.CID, "", new { @class = "text-danger" })

                                                            </div>
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom02">Sub Category</label>
                                                                @Html.DropDownListFor(model => model.SCID, new SelectList(" "), "Select Sub Category", new { @class = "form-control" })
                                                                @Html.ValidationMessageFor(model => model.SCID, "", new { @class = "text-danger" })

                                                            </div>

                                                        </div>
                                                        <div class="form-row">
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom01">Unit</label>
                                                                @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.Unit, "", new { @class = "text-danger" })

                                                            </div>
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom02">Min Stock</label>
                                                                @Html.EditorFor(model => model.MinStock, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.MinStock, "", new { @class = "text-danger" })

                                                            </div>

                                                        </div>
                                                        <div class="form-row">
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom01">Discount</label>
                                                                @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })

                                                            </div>
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom02">DiscountTp</label>
                                                                @Html.EditorFor(model => model.DiscountTp, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.DiscountTp, "", new { @class = "text-danger" })

                                                            </div>

                                                        </div>
                                                        <div class="form-row">
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom01">Brand</label>
                                                                @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })

                                                            </div>
                                                            <div class="col-md-5 mb-5">
                                                                <label for="validationCustom02">Remarks</label>
                                                                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })

                                                            </div>

                                                        </div>
                                                        <input type="submit" value="Create" class="btn btn-primary mt-3" />

                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#CID").change(function () {
                $.get("/Item/GetCategoryList",{ CID: $("#CID").val() }, function (data) {
                    $("#SCID").empty();

                    $.each(data, function (index, row) {
                        /*var row = "<tr><td>" + row.SubCatName + "</td></tr>";*/
                        $("#SCID").append("<option value= '"+row.SCID+"'>"+row.SubCatName+" </option>")
                    });
                });
            })
        });
    </script>
</div>